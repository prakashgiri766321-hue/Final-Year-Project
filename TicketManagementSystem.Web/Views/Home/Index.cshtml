<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>TMS Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        body {
            background-color: #f6f7fb;
            font-family: "Segoe UI", sans-serif;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #ffffff;
            position: fixed;
            left: 0;
            top: 0;
            border-right: 1px solid #eee;
        }

            .sidebar .logo {
                padding: 20px;
                font-weight: bold;
                color: #0d6efd;
            }

            .sidebar a {
                display: block;
                padding: 14px 20px;
                color: #555;
                text-decoration: none;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background: #f0f4ff;
                    color: #0d6efd;
                    font-weight: 500;
                }

        .main {
            margin-left: 250px;
            padding: 20px 30px;
        }

        .topbar {
            background: #fff;
            padding: 15px 20px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
        }

        .stat-card {
            background: #fff;
            border-radius: 14px;
            padding: 25px;
            box-shadow: 0 4px 20px rgba(0,0,0,.04);
        }

            .stat-card h2 {
                font-weight: 700;
            }

            .stat-card span {
                color: #8a8fa3;
            }

        .panel {
            background: #fff;
            border-radius: 14px;
            padding: 20px;
            box-shadow: 0 4px 20px rgba(0,0,0,.04);
        }
    </style>
</head>
<body>

    <div class="sidebar d-flex flex-column justify-content-between">
        <div>
            <div class="logo">
                🎫 TMS<br>
                <small class="text-muted">Ticket Management System</small>
            </div>

            <a class="active"><i class="fa fa-chart-pie me-2"></i> Dashboards</a>
            <a><i class="fa fa-ticket me-2"></i> Tickets</a>
            <a><i class="fa fa-file-alt me-2"></i> Forms & Policies</a>
            <a><i class="fa fa-users me-2"></i> User Management</a>
        </div>

        <div class="mb-3 text-center">
            <form asp-controller="Account" asp-action="Logout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-link text-danger">
                    <i class="fa fa-sign-out-alt me-2"></i> Logout
                </button>
            </form>
        </div>
    </div>

    <div class="main">

        <div class="topbar">
            <div>
                <i class="fa fa-arrow-left me-3"></i>
                <strong>Dashboard</strong>
            </div>
            <div>
                <i class="fa fa-bell me-4 position-relative">
                    <span class="position-absolute top-0 start-100 translate-middle badge bg-danger">0</span>
                </i>
                <i class="fa fa-user-circle fa-lg"></i>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <span>Total Tickets</span>
                    <h2>165</h2>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <span>Open</span>
                    <h2>0</h2>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <span>In Progress</span>
                    <h2>12</h2>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <span>Closed</span>
                    <h2>153</h2>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="panel">
                    <h6 class="mb-3">Ticket Details</h6>
                    <canvas id="pieChart"></canvas>
                </div>
            </div>
            <div class="col-md-8">
                <div class="panel">
                    <h6 class="mb-3">Tickets Over Time</h6>
                    <canvas id="lineChart"></canvas>
                </div>
            </div>
        </div>

    </div>

    <script>
        new Chart(document.getElementById('pieChart'), {
            type: 'pie',
            data: {
                labels: ['Network', 'Software', 'Hardware'],
                datasets: [{
                    data: [26, 135, 4],
                    backgroundColor: ['#f5426c', '#4cc37a', '#f5c542']
                }]
            }
        });

        new Chart(document.getElementById('lineChart'), {
            type: 'line',
            data: {
                labels: ['Jan 5','Jan 9','Jan 13','Jan 17','Jan 21','Jan 25','Jan 29','Feb 2'],
                datasets: [{
                    label: 'Tickets',
                    data: [0,12,0,6,4,0,8,3],
                    borderColor: '#f5426c',
                    tension: 0.4,
                    fill: false
                }]
            }
        });
    </script>

</body>
</html>
